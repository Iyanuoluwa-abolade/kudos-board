generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincrement())
  title String
  category String
  image_url String @default("https://i.pinimg.com/originals/57/3a/2c/573a2c18d0775f2b586b3b15af5abf42.png")
  cards Card[]
}

model Card {
  id Int @id @default(autoincrement())
  message String
  author String
  board Board @relation(fields:[boardId], references: [id])
  boardId Int
  image_url String
}
